<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grafixartist.gallery.HomeActivity"
    android:background="#fcfcfc">
    
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#2d2d2d"
                android:id="@+id/apprentice_profile_pic"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="My Name"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"
                android:layout_toRightOf="@+id/apprentice_profile_pic"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="My Company"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"
                android:layout_toRightOf="@+id/apprentice_profile_pic"
                android:layout_below="@+id/profile_name"
                android:id="@+id/profile_company"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="My Role"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"
                android:layout_toRightOf="@+id/apprentice_profile_pic"
                android:layout_below="@+id/profile_company"
                android:textStyle="bold"
                android:id="@+id/profile_role"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_below="@id/apprentice_profile_pic"
                android:layout_marginTop="30dp"
                android:textColor="#2d2d2d"
                android:text="Why did you choose to do an apprenticeship program?"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:id="@+id/choice"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_below="@id/choice"
                android:layout_marginTop="10dp"
                android:textColor="#2d2d2d"
                android:text="I chose to be an apprentice to get experience, to work in an enviroment with other apprentices and blah blah blah etc etc etc etc.......!!!!!!!!!!!!!"
                android:shadowColor="#000"
                android:id="@+id/answer1"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_below="@id/answer1"
                android:layout_marginTop="15dp"
                android:textColor="#2d2d2d"
                android:text="I honestly can't think of any questions?"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:id="@+id/question2"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_below="@id/question2"
                android:layout_marginTop="10dp"
                android:textColor="#2d2d2d"
                android:text="I chose to be an apprentice to get experience, to work in an enviroment with other apprentices and blah blah blah etc etc etc etc.......!!!!!!!!!!!!!"
                android:shadowColor="#000"
                android:id="@+id/answer2"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_below="@id/answer2"
                android:layout_marginTop="15dp"
                android:textColor="#2d2d2d"
                android:text="I honestly can't think of any questions?"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:id="@+id/question3"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_below="@id/question3"
                android:textColor="#2d2d2d"
                android:layout_marginTop="10dp"
                android:text="I chose to be an apprentice to get experience, to work in an enviroment with other apprentices and blah blah blah etc etc etc etc.......!!!!!!!!!!!!!"
                android:shadowColor="#000"
                android:id="@+id/answer3"/>

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
